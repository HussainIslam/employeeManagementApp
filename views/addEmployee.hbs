<form action="#" method="#">
    <input type="hidden" id="employeeid" name="employeeid">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="fname">First Name: </label>
                <input type="text" class="form-control" id="fname" placeholder="First Name">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="lname">Last Name: </label>
                <input type="text" class="form-control" id="lname" placeholder="Last Name">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="email">Email: </label>
                <input type="email" class="form-control" id="email" placeholder="name@example.com">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="name">Designation: </label>
                <input type="text" class="form-control" id="designation" placeholder="Designation" >
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="department">Deparment: </label>
                <select name="department" id="department" class="form-control">
                    <option value="sales">Sales</option>
                    <option value="Accounting">Accounting</option>
                    <option value="it">Information Technology</option>
                    <option value="hr">Human Resources</option>
                    <option value="procurement">Procurement</option>
                    <option value="maintenance">Maintenance</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="address1">Addres Line 1: </label>
                <input type="text" class="form-control" id="addess1" placeholder="Addrss Line 1">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label for="address2">Address Line 2: </label>
                <input type="text" class="form-control" id="address2" placeholder="Address Line 2">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label for="apartment">Apartment: </label>
                <input type="text" class="form-control" id="apartment" placeholder="Apartment#">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="city">City: </label>
                <input type="text" class="form-control" id="city" placeholder="City">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="provice">Provice: </label>
                <input type="text" class="form-control" id="Province" placeholder="Province">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="postal">Postal Code: </label>
                <input type="text" class="form-control" id="postal" placeholder="Postal Code">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label for="managerid">Manager ID: </label>
                <input type="text" class="form-control" id="managerid" placeholder="Manager ID">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="dob">Date of Birth: </label>
                <input type="date" class="form-control" id="dob">
            </div>
        </div>
        <br>
        <div class="col-md-6">
            <div class="form-group">
                <label>Status: </label><br>
                <label class="checkbox-inline">
                    <input type="radio" id="fulltime" name="status" value="fulltime" checked> Full Time
                </label>
                <label class="checkbox-inline">
                    <input type="radio" id="parttime" name="status" value="parttime"> Part Time
                </label>
                <label class="checkbox-inline">
                    <input type="radio" id="contractual" name="status" value="contractual"> Contractual
                </label>
                <label class="checkbox-inline">
                    <input type="radio" id="intern" name="status" value="intern"> Intern
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="employeeimage">Employee Image</label>
        <input type="file" class="form-control-file" id="employeeimage">
    </div>

</form>